<script type="text/javascript"> 
// 
window.onload = function(){
var Words = document.getElementById("words");
var Who = document.getElementById("who");
var TalkWords = document.getElementById("talkwords");
var TalkSub = document.getElementById("talksub");


TalkSub.onclick = function(){
//定义空字符串
var str = "";
var newinput=document.getElementById('words'); 


if(TalkWords.value == ""){
// 消息为空时弹窗
alert("消息不能为空");
return;
}
if(Who.value == 0){
str = '<div class="event">' + TalkWords.value +'</div>';
}
else if(Who.value == 1){
//如果Who.value为0n那么是 A说
str = '<div class="atalk"><span> ' + TalkWords.value +'</span></div>';
}
else if(Who.value == 2){
str = '<div class="btalk"><span> ' + TalkWords.value +'</span></div>' ; 
}
else if(Who.value == 3){
str = '<div class="ctalk"><span> ' + TalkWords.value +'</span></div>' ; 
}
else{
str = '<div class="dtalk"><span> ' + TalkWords.value +'</span></div>' ; 
}


Words.innerHTML = Words.innerHTML + str;
TalkWords.value = "";
newinput.scrollTop = newinput.scrollHeight; 
}




}








</script>
